{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "src",
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "./dist/**/*", "./__mocks__/**/*", "./__tests__/**/*"]
}
